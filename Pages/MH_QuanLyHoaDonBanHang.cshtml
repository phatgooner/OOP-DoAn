@page
@using DoAnMonHoc_23880108.Entity
@model DoAnMonHoc_23880108.Pages.MH_QuanLyHoaDonBanHangModel
@{
}
<p style=" text-align:center; font-size:larger; font-weight: bold">DANH SÁCH HÓA ĐƠN BÁN HÀNG</p>

<div>
	<form method="POST">
		<label for="fname">Tìm mã hóa đơn:</label><br>
		<input type="text" id="fname" name="tukhoa" value="@Model.tuKhoa">


		<input type="submit" value="Tìm kiếm" />
	</form>
</div>
<br>


@if (Model.ds != null)
{
	<div>
		<table>
			<tr>
				<th>Mã Hóa Đơn</th>
				<th>Họ Tên Người Mua Hàng</th>
				<th>Ngày Tạo Hóa Đơn</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
			@foreach (HoaDon hd in Model.ds)
			{
				<tr>
					<td>@hd.Ma</td>
					<td>@hd.TenNguoi</td>
					<td>@hd.NgayTao</td>
					<td>
						<a href="/MH_XemChiTietHoaDonBanHang?maHD=@hd.Ma">Xem chi tiết</a>
					</td>
					<td>
						<a href="/MH_SuaHoaDonBanHang?maHD=@hd.Ma">Sửa thông tin</a>
					</td>
					<td>
						<a href="/MH_XoaHoaDonBanHang?maHD=@hd.Ma">Xóa</a>
					</td>
				</tr>
			}
		</table>
	</div>
}
<div>
	<a href="/MH_ThemHoaDonBanHang">Tạo Hóa Đơn Mới</a>
</div>