@page
@model DoAnMonHoc_23880108.Pages.MH_SuaHoaDonBanHangModel
@{
}
@if (Model.hd != null)
{
	<p>Sửa thông tin hóa đơn mã @Model.maHD</p>

	<div>
		<form method="POST">

			<label for="fname">Nhập tên người/đơn vị mua hàng:</label><br>
			<input type="text" id="fname" name="tenNguoiMua" value="@Model.tenNguoiMua"><br>

			<label for="fname">Nhập ngày tạo hóa đơn:</label><br>
			<input type="date" id="fname" name="ngayTao" value="@Model.ngayTao"><br><br>

			<input type="submit" value="Sửa thông tin danh mục hàng hóa" />
		</form>
	</div>
	<p>@Model.Chuoi</p>
}
else
{
	<p>Không tìm thấy thông tin hóa đơn!</p>
}