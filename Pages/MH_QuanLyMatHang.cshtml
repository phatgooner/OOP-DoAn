@page
@using DoAnMonHoc_23880108.Entity
@model DoAnMonHoc_23880108.Pages.MH_QuanLyMatHangModel
@{
}

<p style=" text-align:center; font-size:larger; font-weight: bold">DANH SÁCH MẶT HÀNG</p>

<div>
	<form method="POST">
		<label for="fname">Tìm tên mặt hàng:</label><br>
		<input type="text" id="fname" name="tukhoa" value="@Model.tuKhoa">


		<input type="submit" value="Tìm kiếm" />
	</form>
</div>
<br>


@if (Model.ds != null)
{
	<div>
		<table>
			<tr>
				<th>Mã Hàng</th>
				<th>Tên Hàng</th>
				<th>Loại Hàng</th>
				<th>Công ty Sản Xuất</th>
				<th>Ngày Sản Xuất</th>
				<th>Hạn Sử Dụng</th>
				<th>Giá (VNĐ)</th>
				<th></th>
				<th></th>
			</tr>
			@foreach (MatHang s in Model.ds)
			{
				<tr>
					<td>@s.Ma</td>
					<td>@s.Ten</td>
					<td>@s.Loai</td>
					<td>@s.CongTySX</td>
					<td>@s.NSX</td>
					<td>@s.HSD</td>
					<td>@s.Gia.ToString("#,##0")</td>
					<td>
						<a href="/MH_SuaMatHang?maMH=@s.Ma">Sửa</a>
					</td>
					<td>
						<a href="/MH_XoaMatHang?maMH=@s.Ma">Xóa</a>
					</td>
				</tr>
			}
		</table>
	</div>
}
<div>
	<a href="/MH_ThemMatHang">Thêm Mặt Hàng</a>
</div>
