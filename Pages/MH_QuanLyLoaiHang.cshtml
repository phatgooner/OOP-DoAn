@page
@using DoAnMonHoc_23880108.Entity
@model DoAnMonHoc_23880108.Pages.MH_QuanLyLoaiHangModel
@{
}
<p style=" text-align:center; font-size:larger; font-weight: bold">DANH SÁCH LOẠI HÀNG</p>

<div>
	<form method="POST">
		<label for="fname">Tìm loại hàng:</label><br>
		<input type="text" id="fname" name="tukhoa" value="@Model.tuKhoa">


		<input type="submit" value="Tìm kiếm" />
	</form>
</div>
<br>


@if (Model.ds != null)
{
	<div>
		<table>
			<tr>
				<th>Mã loại hàng</th>
				<th>Loại hàng</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
			@foreach (LoaiHang loaiHang in Model.ds)
			{
				<tr>
					<td>@loaiHang.Ma</td>
					<td>@loaiHang.Ten</td>
					<td>
						<a href="/MH_XemChiTietLoaiHang?tenLH=@loaiHang.Ten">Xem chi tiết</a>
					</td>
					<td>
						<a href="/MH_SuaLoaiHang?maLH=@loaiHang.Ma">Sửa thông tin</a>
					</td>
					<td>
						<a href="/MH_XoaLoaiHang?maLH=@loaiHang.Ma">Xóa</a>
					</td>
				</tr>
			}
		</table>
	</div>
}
<div>
	<a href="/MH_ThemLoaiHang">Thêm Loại Hàng</a>
</div>